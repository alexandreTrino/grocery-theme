{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"],
    "props":{
      "blockClass":"footer-site"
    }
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#icons",
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#institucional",
      "vtex.menu@2.x:menu#footer-atencion",
      "vtex.menu@2.x:menu#footer-soporte",
      "flex-layout.row#social-line-row"
    ],
    "props": {
      "blockClass": ["menu-row","footer-site"],
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },
  "flex-layout.row#social-line-row":{
    "children":[
      "flex-layout.col#social-line-col"
    ]
  },
  "flex-layout.col#social-line-col":{
    "children":[
      "rich-text#title-social-footer",
      "newsletter#news-footer"
    ],
    "props":{
      "blockClass":"footer-last-col",
      "horizontalAlign":"right"
    }
  },
  "rich-text#title-social-footer":{
    "props": {
      "textAlignment": "LEFT",
      "text": "Suscríbete",
      "textColor": "muted-1",
      "font": "t-heading-5",
      "blockClass": "title-social-footer"
    }
  },
  "flex-layout.row#footer-2-desktop": {
    "children": ["rich-text#footer","flex-layout.col#col-pagos-img"],
    "props": {
      "blockClass": ["general-infos","menu-row"]
    }
  },
  "flex-layout.col#col-pagos-img":{
    "children":["image#pagos","powered-by"],
    "props":{
      "horizontalAlign":"right"
    }
  },
  "image#pagos": {
    "props": {
      "src": "/arquivos/pagos.png",
      "srcset": "/arquivos/pagos.png",
      "blockClass":"img-pagos",
      "maxHeight":"30px"
    }
  },

  "powered-by":{
    "props":{
      "showInColor":false
    }
  },

  "newsletter#news-footer":{
    "props":{
      "label":"Obtén 10% de descuento en tu primer compra",
      "blockClass":"news-footer"
    }
  },

  "rich-text#footer": {
    "props": {
      "text": "2020 Calimax MX® Todos los derechos reservados. IGNACIO COMONFORT NO. 9351, ZONA URBANA RÍO TIJUANA, B.C. C.P. 22010 TELÉFONO: 55.5908.0607",
      "blockClass": "footer"
    }
  },
  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ],
    "props":{
      "blockClass":"credits"
    }
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "image#pagos",
      "social-networks",
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "© CALIMAX - 2020  |  All Right Reserved  - Tel: 55.5908.0607",
      "blockClass": "footer"
    }
  },
  "flex-layout.row#icons":{
    "children":[
      "flex-layout.col#icons-col1",
      "flex-layout.col#icons-col2",
      "flex-layout.col#icons-col3",
      "flex-layout.col#icons-col4"
    ],
    "props":{
      "horizontalAlign": "center",
      "fullWidth":false,
      "paddingTop":5,
      "blockClass":"iconsRow",
      "preventHorizontalStretch":true
    }
  },
  "flex-layout.col#icons-col1":{
    "children":[
      "image#item1",
      "rich-text#item1"
    ],
    "props":{
      "blockClass":"footerColumnItem",
      "verticalAlign":"middle",
      "preventVerticalStretch":true
    }
  },
  "image#item1": {
    "props": {
      "blockClass":"iconImage",
      "src": "https://carulla.vtexassets.com/assets/vtex.file-manager-graphql/images/ico-promises-products___3be8a44853f3130cc33914ca15dfc242.svg"
    }
  },

  "rich-text#item1": {
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Más de 100 mil productos",
      "textColor": "red",
      "font": "Helvetica",
      "blockClass": "help-message"
    }
  },

  "flex-layout.col#icons-col2":{
    "children":[
      "image#item2",
      "rich-text#item2"
    ],
    "props":{
      "blockClass":"footerColumnItem",
      "verticalAlign":"middle"
    }
    
  },

  "image#item2": {
    "props": {
      "blockClass":"iconImage",
      "src": "https://carulla.vtexassets.com/assets/vtex.file-manager-graphql/images/ico-promises-security___6413c24fdc476218fcfb59bb7b8affa3.svg"
    }
  },

  "rich-text#item2": {
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Compras seguras",
      "textColor": "red",
      "font": "Helvetica",
      "blockClass": "help-message"
    }
  },

  "flex-layout.col#icons-col3":{
    "children":[
      "image#item3",
      "rich-text#item3"
    ],
    "props":{
      "blockClass":"footerColumnItem",
      "verticalAlign":"middle"
    }
  },

  "image#item3": {
    "props": {
      
      "blockClass":"iconImage",
      "src": "https://carulla.vtexassets.com/assets/vtex.file-manager-graphql/images/ico-promises-puntoscolombia___b1c00b0be5358ac04425d615e7ce5262.svg"
    }
  },

  "rich-text#item3": {
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Acumulas Puntos",
      "textColor": "red",
      "font": "Helvetica",
      "blockClass": "help-message"
    }
  },

  "flex-layout.col#icons-col4":{
    "children":[
      "image#item4",
      "rich-text#item4"
    ],
    "props":{
      "blockClass":"footerColumnItem",
      "verticalAlign":"middle"
    }
  },

  "image#item4": {
    "props": {
      "src": "https://carulla.vtexassets.com/assets/vtex.file-manager-graphql/images/ico-promises-pay___fe4aefb0a3d9c59b0d647c2b83c857fa.svg",
      "blockClass":"iconImage"
    }
  },

  "rich-text#item4": {
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Paga en línea o en efectivo",
      "textColor": "red",
      "font": "Helvetica",
      "blockClass": "help-message"
    }
  }
